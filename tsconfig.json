{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/js",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noEmitOnError": false,
      "noImplicitAny": false
    },
    "typeRoots": [
      "src"
    ],
    "include": ["src/**/*"],
    "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
  }